<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
        <a class="navbar-brand" href="/urls">TinyApp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link" href="/urls">My URLs</a>
                <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
            </div>

            <% if (!user) { %>
                <form class="form-inline my-2 my-lg-0" method="POST" action="/login">
                    <input class="form-control mr-sm-2" type="email" placeholder="Email" name="email">
                    <input class="form-control mr-sm-2" type="password" placeholder="Password" name="password">
                    <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Login</button>
                </form>
                <a href="/register" class="btn btn-outline-light my-2 my-sm-0 ml-3">Register</a>
                <% } else { %>
                    <div class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                <%= user.username %>
                            </a>
                        </li>
                        <form class="form-inline my-2 my-lg-0" method="POST" action="/logout">
                            <button class="btn btn-outline-light my-2 my-sm-0" type="submit">Logout</button>
                        </form>

                    </div>
                    <% } %>

        </div>
    </nav>
</header>